{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "server.ts",
    "lib/**/*.ts",
    "bin/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "web",
    "dist"
  ]
}
